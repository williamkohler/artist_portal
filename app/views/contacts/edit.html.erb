<% provide(:title, "Edit Contact") %>
  <div class="summary">
    <div class="row">
      <div class="col-md-6">
        <h3><%= @contact.name %></h3>
      </div>
      <div class="col-md-6">

        <% if current_user.admin %>
        <span class="right-float artist-delete">
          <%= link_to 'delete', @contact, method: :delete,
                                          data: { confirm: 'You sure?' } %>
        </span><br>
        <% end %>
      </div>
    </div>

    <%= form_for @contact do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <%= f.text_field :name, placeholder: "Name *", class: "form-control" %>

    <%= f.text_field :phone, placeholder: :phone, class: "form-control" %>

    <%= f.text_field :mobile, placeholder: :mobile, class: "form-control" %>

    <%= f.text_field :email, placeholder: "Email *", class: "form-control" %>

    <%= f.submit 'Update', class: 'btn label-warning' %>
  <% end %>
</div>
